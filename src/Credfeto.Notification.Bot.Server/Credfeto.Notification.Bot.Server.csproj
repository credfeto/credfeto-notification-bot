    <PackageReference Include="Credfeto.Enumeration.Source.Generation" Version="0.0.8.10" PrivateAssets="All" ExcludeAssets="runtime"/>
    <PackageReference Include="FunFair.CodeAnalysis" Version="5.9.0.1493" PrivateAssets="All" ExcludeAssets="runtime"/>
    <PackageReference Include="Meziantou.Analyzer" Version="1.0.746" PrivateAssets="All" ExcludeAssets="runtime"/>
    <PackageReference Include="Mediator.SourceGenerator" Version="2.0.27-rc" PrivateAssets="All" ExcludeAssets="runtime"/>
    <!--    IncludeAssets="runtime; build; native; contentfiles; analyzers"-->
